<Window x:Class="IndoorPlaygroundSafetyCheck.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:IndoorPlaygroundSafetyCheck.ViewModels"
        Title="Login" Height="800" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Cursor="IBeam">
    <Grid>
        <Image Source="/Images/Background/Login.png" Opacity="0.6" Stretch="UniformToFill"/>
        <Border Background="#AAFFFFFF" Margin="50" CornerRadius="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <TextBlock Text="Einloggen mit RFID" Margin="0,20,0,10" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                <PasswordBox x:Name="passwordBoxRfid" Width="200" Margin="0,0,0,20" Padding="5"  Loaded="PasswordBoxRfid_Loaded"/>
                <Button Content="Login" Width="200" Background="#2196F3" Foreground="White" BorderThickness="0" Padding="10" Click="LoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
