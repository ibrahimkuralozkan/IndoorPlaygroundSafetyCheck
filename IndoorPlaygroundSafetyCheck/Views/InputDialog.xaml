<Window x:Class="IndoorPlaygroundSafetyCheck.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin RFID Verification" Height="240" Width="397"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="10,10,10,53">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Bitte benutzen Sie die Admin-RFID-Karte" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <PasswordBox x:Name="passwordBox" Width="347" Margin="23,113,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="275,23,0,0" Grid.Row="1">
            <Button Content="OK" Width="75" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
